//Constructors
#include<iostream>
#include<string>
#include <vector>
using namespace std;

class Chai{
public:
    string teaname;
    int serving;
    vector<string> ingredients;
    //parameterized constructor
    Chai(string name, int serve, vector<string> ing){   
        teaname=name;
        serving=serve;
        ingredients=ing;
        cout<<" Parameterized constructor called"<<endl;
    }

    void displaychaiDetails(){
        cout<<"Tea Name: "<<teaname<<endl;
        cout<<"Serving: "<<serving<<endl;
        cout<<"Ingredients: ";
        for(int i=0;i<ingredients.size();i++){
            cout<<ingredients[i]<<" ";
        }
        cout<<endl;
    }
};
int main(){
    Chai lemontree("Lemon Tea",2,{"Lemon","Tea Leaves","Sugar"});

lemontree.displaychaiDetails();
    //copy the object
    Chai copiedchai=lemontree;
    copiedchai.displaychaiDetails();
    return 0;
}























































































































